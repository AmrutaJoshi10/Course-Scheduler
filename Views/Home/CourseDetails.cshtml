@model CoursesApp.Models.Course
<!--
  CourseDetails.cshtml - show course details including lectures

  Jim Fawcett, CSE686 - Internet Programming, Spring 2019
-->

@{
  ViewData["Title"] = "CourseDetails";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CourseDetails</h1>

<div>
  <h4>Course</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Identifier)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Identifier)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Name)
    </dd>
  </dl>
</div>
<div>
  <h4 style="margin-bottom: 10px;">Lectures</h4>
  @foreach (var lct in Model.Lectures)
  {
    <div style="padding:0px 25px; margin:0px;">
      @Html.Label(lct.Title) -
      @Html.Label(lct.Content)
    </div>
  }
</div>
<div style="height: 10px;"></div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
